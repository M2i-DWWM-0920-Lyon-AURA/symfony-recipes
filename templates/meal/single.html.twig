{% extends 'base.html.twig' %}

{% block title %}Hello MealController!{% endblock %}

{% block body %}
<h1>{{ meal.name }}</h1>
<img class="img-fluid" src="{{ meal.image }}" alt="Picture of {{ meal.name }}" />

<h2>Ingredients:</h2>
<ul>

    {% for ingredient in meal.ingredients %}
    <li>
        {{ ingredient.name }} ({{ ingredient.measure }})
    </li>
    {% endfor %}

</ul>

<h2>Instructions:</h2>
<ul>

    {% for instruction in meal.instructions %}
    <li>
        {{ instruction.description }}
    </li>
    {% endfor %}

</ul>

<a class="btn btn-warning" href="{{ path('meal_update_form', {id: meal.id}) }}">Modify meal</a>
<a class="btn btn-secondary" href="{{ path('meal_list') }}">Back to list</a>

{% endblock %}
